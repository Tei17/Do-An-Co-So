@model IEnumerable<QLSinhVien.Models.SinhVien>

@{
	ViewBag.Title = "Index";
}

<h2>Quản lý sinh viên</h2>

<p>
	@Html.ActionLink("Tạo mới", "Create")

</p>
@using (Html.BeginForm("UploadFile", "SinhVien", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

	<div>
		@Html.TextBox("file", "", new { type = "file" }) <br />

		<input type="submit" value="Nhập từ tập tin Excel" />

		@ViewBag.Message

	</div>


}
<table class="table" id="tbSinhVien">
	<thead>
		<tr>
			<th>

				@Html.DisplayNameFor(model => model.HoVaTen)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.GioiTinh)
			</th>
			<th>

				@Html.DisplayNameFor(model => model.Email)
			</th>
			<th>

				@Html.DisplayNameFor(model => model.SoDienThoai)
			</th>
			<th>

				@Html.DisplayNameFor(model => model.MaSoSV)
			</th>
			<th>

				@Html.DisplayNameFor(model => model.IdChucVu)
			</th>

			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.HoVaTen)
				</td>
				<td>
					@(item.GioiTinh?"Nam":"Nữ")
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Email)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.SoDienThoai)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.MaSoSV)
				</td>

				<td>
					@(item.ChucVu==null?"":item.ChucVu.TenChucVu)
				</td>

				<td>
					@Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.Id }) |
					@Html.ActionLink("Xoá", "Delete", new { id = item.Id })
				</td>
			</tr>
		}
	</tbody>
</table>
<script>
	$(document).ready(function () {
		$('#tbSinhVien').DataTable();
	});
</script>